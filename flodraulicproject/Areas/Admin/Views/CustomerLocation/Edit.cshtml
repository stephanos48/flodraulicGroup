@model CustomerLocation

<form method="post">
    <input asp-for="CustomerLocationId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Location</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label class="p-0">Location Name</label>
            <input asp-for="LocationName" class="form-control" />
            <span asp-validation-for="LocationName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Address</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">City</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">State</label>
            <input asp-for="State" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Zip Code</label>
            <input asp-for="ZipCode" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Country</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Notes</label>
            <input asp-for="Notes" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="CustomerLocation" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>

</form>
