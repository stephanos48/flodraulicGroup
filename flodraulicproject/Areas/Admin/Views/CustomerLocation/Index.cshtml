@model List<CustomerLocation>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">

                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="CustomerLocation" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Location
                </a>
            </div>
        </div>
    

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Location
                </th>
                <th>
                    Notes
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.OrderBy(u=>u.CustomerLocationId))
                {
                    <tr>
                        <td>@obj.LocationName</td>
                        <td>@obj.Notes</td>
                        <td>
                            <div class="2-75 btn-group" role="group">
                            <a asp-controller="CustomerLocation" asp-action="Edit" asp-route-id="@obj.CustomerLocationId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            <a asp-controller="CustomerLocation" asp-action="Delete" asp-route-id="@obj.CustomerLocationId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>