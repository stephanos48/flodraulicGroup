@model CustomerLocation

<form method="post">
    <input asp-for="CustomerLocationId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete CustomerLocation</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="LocationName" class="p-0">Location Name</label>
            <input asp-for="LocationName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Notes" class="p-0">Notes</label>
            <input asp-for="Notes" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="CustomerLocation" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>

</form>
