@model TicketVM

<div class="card shadow border p-3 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Ticket.Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Ticket.Issue" class="form-control border-0 shadow" />
                    <label asp-for="Ticket.Issue" class="ms-2"></label>
                    <span asp-validation-for="Ticket.Issue" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Ticket.TicketStatusId" asp-items="ViewBag.TicketStatusList" class="form-select"></select>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Ticket.ApplicationUserId" asp-items="ViewBag.UserList" class="form-select"></select>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Ticket.Notes" class="form-control border-0 shadow" />
                    <label asp-for="Ticket.Notes" class="ms-2"></label>
                    <span asp-validation-for="Ticket.Notes" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
