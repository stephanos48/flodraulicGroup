@model InventoryVM

<form method="post">
    <input asp-for="Inventory.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Inventory</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            @Html.LabelFor(model => model.Inventory.ProductId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Inventory.ProductId, new SelectList(Model.Products, "Id", "PartNumber"), "Select Product", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Inventory.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Inventory.FloLocationId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Inventory.FloLocationId, new SelectList(Model.FloLocations, "FloLocationId", "LocationName"), "Select Location", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Inventory.FloLocationId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">QOH</label>
            <input asp-for="Inventory.StartQoh" class="form-control" />
            <span asp-validation-for="Inventory.StartQoh" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>

</form>
