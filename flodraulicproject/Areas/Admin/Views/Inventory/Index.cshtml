@model IEnumerable<Inventory>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">

                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Inventory Item
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped width=" 100%"">
            <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Part Number
                </th>
                <th>
                    Location
                </th>
                <th>
                    Qoh
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.LocationName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartQoh)</td>
                        <td>
                            @*<div class="2-75 btn-group" role="group">
                                <a asp-controller="Inventory" asp-action="Edit" asp-route-id="@item.Inventories.Select(u => u.ProductId)" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Inventory" asp-action="Delete" asp-route-id="@item.Inventories.Select(u => u.ProductId)" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>*@
                            <div class="2-75 btn-group" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#tblData").DataTable({
                'iDisplayLength': 200
            });
        });

    </script>
}