@model EcnLogVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2"> @(Model.EcnLog.Id != 0 ? "Update" : "Create") Log Entry</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="EcnLog.Id" hidden />
            <div class="row">
                <h2>ECN Log Entry</h2>
                <div class="col-6">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <label asp-for="EcnLog.EcnLogStatus" class="ms-2"></label>
                            <select asp-for="EcnLog.EcnLogStatusId" asp-items="@ViewBag.EcnLogStatusList" class="form-select"></select>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="EcnLog.EngineeringLog" class="ms-2"></label>
                            <select asp-for="EcnLog.EngineeringLogId" asp-items="@ViewBag.EngLogList" class="form-select"></select>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.Reason" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.Reason" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.Reason" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.CostImpact" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.CostImpact" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.CostImpact" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.ECNAddlEngHrs" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.ECNAddlEngHrs" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.ECNAddlEngHrs" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.ECNAddlShopHrs" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.ECNAddlShopHrs" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.ECNAddlShopHrs" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.PCNAddlEngHrs" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.PCNAddlEngHrs" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.PCNAddlEngHrs" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.PCNAddlShopHrs" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.PCNAddlShopHrs" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.PCNAddlShopHrs" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EcnLog.AffectPrice"></label>
                            <input asp-for="EcnLog.AffectPrice" type="checkbox" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="EcnLog.Notes" class="form-control border-0 shadow" />
                            <label asp-for="EcnLog.Notes" class="ms-2"></label>
                            <span asp-validation-for="EcnLog.Notes" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="files" class="form-control border-0 shadow" multiple />
                            <label asp-for="EcnLog.EcnLogImages" class="ms-2"></label>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6">
                            @if (Model.EcnLog.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <div class="col-6">
                            <a asp-controller="EcnLog" asp-action="Index" class="btn btn-secondary border form-control">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-1">

                </div>
                <div class="col-5">
                        @if (Model.EcnLog.EcnLogImages != null)
                        {
                            foreach(var image in Model.EcnLog.EcnLogImages)
                            {
                                <div class="border p-1 m-2 text-center">
                                    <img src="@image.ImageUrl" width="100%"
                                        style="border-radius:5px; border:1px solid #bbb9b9"/>
                                </div>
                            }
                        }

                </div>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <script>

    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}