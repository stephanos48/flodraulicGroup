@model InitialQuoteReviewVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2"> @(Model.Id!=0?"Update":"Create") Initial Quote Review Entry</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="InitialQuoteReview.Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="col-6">
                        <div class="border p-3">
                            @*<div asp-validation-summary="ModelOnly"></div>*@
                            <div class="form-floating py-2">
                                <input asp-for="EngineeringLog.QuoteNo" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="EngineeringLog.QuoteNo" class="ms-2"></label>
                                <span asp-validation-for="EngineeringLog.QuoteNo" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input asp-for="EngineeringLog.Customer" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="EngineeringLog.Customer" class="ms-2"></label>
                                <span asp-validation-for="EngineeringLog.Customer" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input asp-for="EngineeringLog.QuoteRequestReceivedDate" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="EngineeringLog.QuoteRequestReceivedDate" class="ms-2"></label>
                                <span asp-validation-for="EngineeringLog.QuoteRequestReceivedDate" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input asp-for="EngineeringLog.QuoteTargetDate" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="EngineeringLog.QuoteTargetDate" class="ms-2"></label>
                                <span asp-validation-for="EngineeringLog.QuoteTargetDate" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input asp-for="EngineeringLog.SalesPerson" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="EngineeringLog.SalesPerson" class="ms-2"></label>
                                <span asp-validation-for="EngineeringLog.SalesPerson" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input asp-for="SalesLocationName" class="form-control border-0 shadow" readonly="true" />
                                <label asp-for="SalesLocationName" class="ms-2"></label>
                                <span asp-validation-for="SalesLocationName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.FGIForm"></label>
                            <input asp-for="InitialQuoteReview.FGIForm" type="checkbox" />
                        </div>
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.FGIFormDetail"></label>
                            <input asp-for="InitialQuoteReview.FGIFormDetail" type="checkbox" />
                        </div>
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.MeetCustomerDate"></label>
                            <input asp-for="InitialQuoteReview.MeetCustomerDate" type="checkbox" />
                        </div>
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.CustomerWaitToTarget"></label>
                            <input asp-for="InitialQuoteReview.CustomerWaitToTarget" type="checkbox" />
                        </div>
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.CustomerSpecsReq"></label>
                            <input asp-for="InitialQuoteReview.CustomerSpecsReq" type="checkbox" />
                        </div>
                        <div class="form-group">
                            <label asp-for="InitialQuoteReview.FallWithinFGICapability"></label>
                            <input asp-for="InitialQuoteReview.FallWithinFGICapability" type="checkbox" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <hr />
                    <div class="row">
                        <h5>
                            <u>INSTRUCTIONS:</u><br />
                            > IF ANY OF THE QUESTIONS ABOVE WERE ANSWERED "NO", FOLLOW INSTRUCTIONS BELOW.<br />
                            > REPLY TO QUOTE REQUEST EMAIL WITH INSTRUCTION TO SEND THE MISSING INFORMATION AND/OR LET SALES KNOW ABOUT ISSUE WITH "QUOTE BY DATE"<br />
                            > IN THE REPLY EMAIL REFERENCE SOMEONE FROM THE QUOTE TEAM THAT CAN ASSIST THEM OR ESTABLISH A TARGET QUOTE DATE <br />
                            > CHANGE STATUS OF QUOTE TO "B. QUOTE FEASBILITY REVIEW"<br />
                            > CREATE QUOTE FOLDERS ON NETWORK AND UPLOAD FILES FURNISHED (including the original email request)
                        </h5>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="InitialQuoteReview.ConfirmFGIForm"></label>
                        <input asp-for="InitialQuoteReview.ConfirmFGIForm" type="checkbox" />
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="InitialQuoteReview.SystemType" class="form-control border-0 shadow" />
                        <label asp-for="InitialQuoteReview.SystemType" class="ms-2"></label>
                        <span asp-validation-for="InitialQuoteReview.SystemType" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="InitialQuoteReview.SimilarJob" class="form-control border-0 shadow" />
                        <label asp-for="InitialQuoteReview.SimilarJob" class="ms-2"></label>
                        <span asp-validation-for="InitialQuoteReview.SimilarJob" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="InitialQuoteReview.Concerns" class="form-control border-0 shadow" />
                        <label asp-for="InitialQuoteReview.Concerns" class="ms-2"></label>
                        <span asp-validation-for="InitialQuoteReview.Concerns" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="InitialQuoteReview.Suggestions" class="form-control border-0 shadow" />
                        <label asp-for="InitialQuoteReview.Suggestions" class="ms-2"></label>
                        <span asp-validation-for="InitialQuoteReview.Suggestions" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="InitialQuoteReview.Engineer" class="form-control border-0 shadow" />
                        <label asp-for="InitialQuoteReview.Engineer" class="ms-2"></label>
                        <span asp-validation-for="InitialQuoteReview.Engineer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InitialQuoteReview.IntiateQuote"></label>
                        <input asp-for="InitialQuoteReview.IntiateQuote" type="checkbox" />
                    </div>

                </div>
            </div>
            
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    @if (Model.InitialQuoteReview.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="EngineeringLog" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
           
        </form>
    </div>
    
</div>

@section Scripts {
    <script>

    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
