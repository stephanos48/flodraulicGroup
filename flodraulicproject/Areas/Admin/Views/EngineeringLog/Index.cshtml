@section scripts
{
    <script>
        $(document).ready(function () {
            $("#tblData").DataTable({
                'iDisplayLength': 200
            });
        });

    </script>

    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript">
        $('#btn').click(function () {
            $('.table').table2excel({
                name: "download",
                filename: "download",
                fileext: ".xlsx"
            });
        });
    </script>
}
