                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.PartFamilyId" asp-items="@Model.PartFamilyList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Family--</option>
                            </select>
