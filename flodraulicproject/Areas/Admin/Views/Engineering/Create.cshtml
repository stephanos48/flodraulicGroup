@model TimeTrackerVM

<div class="card shadow border p-3 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Create Time Entry</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.DateWorkPerformed" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.DateWorkPerformed" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.DateWorkPerformed" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.JobNumber" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.JobNumber" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.JobNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.CustomerName" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.CustomerName" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.CustomerName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.ProjectName" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.ProjectName" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.ProjectName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="TimeTracker.EngineerId" asp-items="@Model.EngineerList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Engineer--</option>
                    </select>
                    <label asp-for="TimeTracker.EngineerId" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.EngineerId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="TimeTracker.FloLocationId" asp-items="@Model.FloLocationList" class="form-select border-0 shadow">
                <option disabled selected>--Select Location--</option>
                </select>
                    <label asp-for="TimeTracker.FloLocationId" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.FloLocationId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="TimeTracker.LaborCodeId" asp-items="@Model.LaborCodeList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Labor Code--</option>
                    </select>
                    <label asp-for="TimeTracker.LaborCodeId" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.LaborCodeId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.WorkDescription" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.WorkDescription" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.WorkDescription" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.HrsWorked" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.HrsWorked" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.HrsWorked" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.WorkDescription" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.WorkDescription" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.WorkDescription" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.P21Entered" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.P21Entered" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.P21Entered" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.ClosedEarly" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.ClosedEarly" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.ClosedEarly" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TimeTracker.Notes" class="form-control border-0 shadow" />
                    <label asp-for="TimeTracker.Notes" class="ms-2"></label>
                    <span asp-validation-for="TimeTracker.Notes" class="text-danger"></span>
                </div>

                @*<div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow" >
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="CategoryId" class="ms-2"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>*@
                @*<div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-select border-0 shadow">
