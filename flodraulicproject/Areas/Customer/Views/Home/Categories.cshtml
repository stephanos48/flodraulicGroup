<div class="container mt-4">
    <div style="text-align: center">
        <div class="row">
            <br />
            <div class="col-11 text-left">
                <img src="/Images/flodraulic.jpg" alt="image">
            </div>
        </div>
        <br>
        <br>
        <br>
        <div class="row" style="text-align: center">
            <div class="col-md-4">
                <h3><i class="fa fa-modx"></i></h3>
                <a asp-controller="Home" asp-action="Pumps" class="btn btn-primary">
                    <img src="/Images/pump.png" alt="image" width="50" height="50">
                    <i class="bi bi-pump"></i> Pumps
                </a>
            </div>
            <div class="col-md-4">
                <h3><i class="fa fa-handshake-o" aria-hidden="true"></i></h3>
                <a asp-controller="Home" asp-action="Valves" class="btn btn-primary">
                    <img src="/Images/valve.png" alt="image" width="50" height="50">
                    <i class="bi bi-valve"></i> Valves
                </a>
            </div>
            <div class="col-md-4">
                <h3><i class="fa fa-eye"></i></h3>
                <a asp-controller="Home" asp-action="Filters" class="btn btn-primary">
                    <img src="/Images/filter.png" alt="image" width="50" height="50">
                    <i class="bi bi-filter"></i> Filters
                </a>
            </div>
        </div>
        <br>
        <br>

    </div>

</div>


