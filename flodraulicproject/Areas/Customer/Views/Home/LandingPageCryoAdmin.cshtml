<div class="container mt-4">
    <div style="text-align: center">

        <div class="row">
            <div class="col-6 col-md-2">
                <a asp-area="Customer" asp-controller="Home" asp-action="LandingPageCryo" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                    <small>Back</small>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h3><i class="fa fa-paper-plane"></i></h3>
                <a asp-controller="Home" asp-action="Reports" class="btn ">
                    <i class="bi bi-newspaper"></i> Admin - Reports
                </a>
            </div>
            <div class="col-md-3">
                <h3><i class="fa fa-handshake-o" aria-hidden="true"></i></h3>
                <a asp-area="Admin" asp-controller="WorkInstruction" asp-action="Index" class="btn">
                    <i class="bi bi-book-fill"></i> Admin - Manage WI
                </a>
            </div>
            <div class="col-md-3">
                <h3><i class="fa fa-handshake-o" aria-hidden="true"></i></h3>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn">
                    <i class="bi bi-pencil-fill"></i> Admin - Manage Products
                </a>
            </div>
            <div class="col-md-3">
                <h3><i class="fa fa-handshake-o" aria-hidden="true"></i></h3>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn">
                    <i class="bi bi-pencil-fill"></i> Admin - Manage Orders
                </a>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <div class="col-md-3">
                <h3><i class="fa fa-paper-plane"></i></h3>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn ">
                    <i class="bi bi-plus"></i> Admin - Create User
                </a>
            </div>
            <div class="col-md-3">
                <h3><i class="fa fa-handshake-o" aria-hidden="true"></i></h3>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn">
                    <i class="bi bi-pencil-fill"></i> Admin - Manage User
                </a>
            </div>

        </div>
        <br />
        <br>

    </div>

</div>


