@model IEnumerable<Product>

<div class="row">
    <div class="col-6 col-md-2">
        <a asp-action="Categories" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
            <small>Back</small>
        </a>
    </div>
</div>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" width="75" height="150" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.PartNumber</p>
                                @*<p class="card-title text-warning text-center">by <b>@product.Author</b></p>*@
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Description:
                                    <span>
                                        @product.Description
                                    </span>
                                </p>
                            </div>

                            @*<div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center mb-0">
                        Price:
                        <span class="text-decoration-line-through">
                        @product.ListPrice.ToString("c")
                        </span>
                        </p>
                        </div>*@
                            @*<div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center">
                        As low as:
                        <span>
                        @product.Price100.ToString("c")
                        </span>
                        </p>
                        </div>*@
                        </div>

                        <div class="mt-2">
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>