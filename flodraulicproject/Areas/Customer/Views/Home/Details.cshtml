@model CartVM

<form method="post">
    <input hidden asp-for="ShoppingCart.ProductId" />
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1">
                    <a asp-action="PumpsList" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                        <small>Back</small>
                    </a>
                </div>

            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                @*<div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-dark text-uppercase">@Model.Product.PartNumber</h3>
                        @*<p class="text-white-50 fw-semibold mb-0">by @Model.Product.PartNumber</p>
                    </div>
                </div>*@
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ShoppingCart.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1 pb-1">

                        @*<div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Product.PartNumber</span>
                        </div>
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Product.Category.Name</span>
                        </div>*@
                        <div class="row">
                            <h4><b>Part Number:</b> @Model.ShoppingCart.Product.PartNumber</h4>
                        </div>
                        <div class="row">
                            <h4><b>Category:</b> @Model.ShoppingCart.Product.Category.Name</h4>
                        </div>
                        <div class="row">
                            <h4><b>Description:</b> @Model.ShoppingCart.Product.Description</h4>
                        </div>
                        <div class="row">
                            <h4><b>List Price:</b> @Model.ShoppingCart.Product.ListPrice.ToString("c")</h4>
                        </div>
                        <div class="row">
                            <h4><b>Discount Price:</b> @Model.ShoppingCart.Product.DiscountPrice.ToString("c")</h4>
                        </div>
                        <div class="row">
                            <h4><b>Lead Time (Days):</b> @Model.ShoppingCart.Product.LeadTime</h4>
                        </div>
                        @*<div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @Model.Product.ListPrice.ToString("c")
                                </span>
                            </h6>
                        </div>*@
                        @*<div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                        </div>*@
                        <div class="row pl-2 my-3">
                            <h4>Total Qoh: @Html.Raw(Model.ShoppingCart.Product.Qoh)</h4>
                        </div>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Qoh
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var obj in Model.QohListVM)
                                {
                                    <tr>
                                        <td>@obj.LocationName</td>
                                        <td>@obj.Qoh</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="row my-1">
                            <div class="col-3">
                                <h4>Location</h4>
                            </div>
                            <div class="col-6">
                                <select asp-for="ShoppingCart.FloLocationId" asp-items="ViewBag.FloLocationList" class="form-select"></select>
                            </div>
                        </div>
                        <br />

                        @*<div class="form-floating py-2 col-12">
                            <select asp-for="ShoppingCart.FloLocationId" asp-items="@Model.FloLocationList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Location--</option>
                            </select>
                            <label asp-for="ShoppingCart.FloLocationId" class="ms-2"></label>
                            <span asp-validation-for="ShoppingCart.FloLocationId" class="text-danger"></span>
                        </div>*@

                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="ShoppingCart.Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

